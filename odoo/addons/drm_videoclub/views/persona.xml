<odoo>
  <data>
    <record id="drm_videoclub.persona_base_tree" model="ir.ui.view">
      <field name="name">drm_videoclub.persona.base.tree</field>
      <field name="model">drm_videoclub.persona</field>
      <field name="arch" type="xml">
        <tree string="">
          <field name="drm_foto" widget="image" class="oe_avatar"/>
          <field name="drm_nombre"/>
          <field name="drm_nacionalidad"/>
          <field name="drm_fecha_nacimiento"/>
          <field name="drm_biografia"/>
        </tree>
      </field>
    </record>

    <record id="drm_videoclub.persona_base_form" model="ir.ui.view">
      <field name="name">drm_videoclub.persona.base.form</field>
      <field name="model">drm_videoclub.persona</field>
      <field name="arch" type="xml">
        <form string="">
          <sheet>
            <group>
              <field name="drm_foto" widget="image" class="oe_avatar_left"/>
              <field name="drm_nombre"/>
              <field name="drm_nacionalidad"/>
              <field name="drm_fecha_nacimiento"/>
              <field name="drm_biografia"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>
  </data>
</odoo>
